  "bugs": {
    "url": "https://github.com/TimtheStew/umbrella-chat/issues"
  },
  "homepage": "https://github.com/TimtheStew/umbrella-chat#readme",
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "app-root-path": "^2.1.0",
    "bunyan": "^1.8.12",
    "config": "^3.0.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "jest": "^21.2.1",
    "jest-json-reporter": "^1.2.2",
    "jsonwebtoken": "^8.5.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.10",
    "path": "^0.12.7",
    "pg": "^7.8.2",
